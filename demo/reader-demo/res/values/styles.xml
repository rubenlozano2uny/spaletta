<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- layout  width height -->
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wm_hw" parent="match_parent">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LinerLayout style -->

    <style name="ll_vertical_mm" parent="match_parent">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_vertical_mw" parent="wm_hw">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_vertical_ww" parent="wrap_content">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_horizontal_mm" parent="match_parent">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_horizontal_mw" parent="wm_hw">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_horizontal_ww" parent="wrap_content">
        <item name="android:id">@+id/ll</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- listView style -->
    
    



</resources>